@model Demo.Models.Entidades.Paciente

@{
    ViewData["Title"] = "Create";
}



<h1 class="text-center">Crear Paciente</h1>



<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-outline mb-3">
                <input asp-for="PacienteId" class="form-control" />
                <label asp-for="PacienteId" class="form-label">ID</label>
                <span asp-validation-for="PacienteId" class="text-danger"></span>
            </div>
            <div class="form-outline mb-3">
                <input asp-for="PacienteNombre" class="form-control" />
                <label asp-for="PacienteNombre" class="form-label">Nombre</label>
                <span asp-validation-for="PacienteNombre" class="text-danger"></span>
            </div>
            <div class="form-outline mb-3">
                <input asp-for="PacienteEmail" class="form-control" />
                <label asp-for="PacienteEmail" class="form-label"></label>
                <span asp-validation-for="PacienteEmail" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <div class="form-outline">
                        <input asp-for="PacienteTelefono" class="form-control" />
                        <label asp-for="PacienteTelefono" class="form-label"></label>
                        <span asp-validation-for="PacienteTelefono" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <input asp-for="PacienteDni" class="form-control" />
                        <label asp-for="PacienteDni" class="form-label"></label>
                        <span asp-validation-for="PacienteDni" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <div class="form-outline">
                        <input asp-for="PacienteFechaNac" class="form-control" />
                        <label asp-for="PacienteFechaNac" class="form-label"></label>
                        <span asp-validation-for="PacienteFechaNac" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <input asp-for="PacienteSexo" class="form-control" />
                        <label asp-for="PacienteSexo" class="form-label"></label>
                        <span asp-validation-for="PacienteSexo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Volver a la Lista</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
